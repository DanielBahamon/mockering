<% if current_mocker.voted_down_on? answer %>
	<i class="fas fa-thumbs-down _color_current" style="margin-right: 2px;"></i>
<% else %>
	<i class="far fa-thumbs-down" style="margin-right: 2px;"></i>
<% end %>
<%= number_to_human(answer.get_downvotes.size, units: { thousand: 'k', million: 'm', billion: 'b' }) %>
