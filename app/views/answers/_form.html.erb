<a class="_link _1" data-toggle="modal" data-target="#review_of_<%= review.id %>">Reply</a>
<div id="review_of_<%= review.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title _fw600 text-left">What's your answer?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="d-none " id="_username_answer_<%= review.mocker.slug %>">@<%= review.mocker.slug %> </p>
        <%= form_for review.answers.new do |f| %>
          <div class="display-grid fullwidth">
            <%= f.text_area :comment, rows: 3, id: "_answer_texarea_#{review.mocker.slug}", class: "_textarea_comment_answer form-control",required: true %>
          </div>
          <%= f.hidden_field :mock_id, value: @mock.id %>
          <%= f.hidden_field :mocker_id, value: @mock.mocker.id %>
          <%= f.hidden_field :review_id, value: review.id %>
          <div class="text-center">
            <%= f.submit "Add review", class: "btn _btn _1" %>
          </div>
          <script type="text/javascript">
            $('#_answer_texarea_<%= review.mocker.slug %>').val($('#_username_answer_<%= review.mocker.slug %>').text());
          </script>
        <% end %>
      </div>
    </div>

  </div>
</div>
