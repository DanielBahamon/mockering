<%= form_for current_mocker.conversation_reports.new do |f| %>
  <div class="_form _1">
    <div class="col-12">
      <div class="field">
        <%= f.label :classification %> <br>
        <%= f.select :classification, ConversationReport.classifications.map {|key, value| [key.humanize, key]}, prompt: "Choose one", class: "form-control _select _1", required: true %>
  	  <%= f.hidden_field :mocker_id, value: current_mocker.id %>
      <%= f.hidden_field :conversation_id, value: conversation.id %>
      <%= f.hidden_field :other_id, value: other.id %>
      </div>
    </div>
    <div class="col-12">
    	<br>
      <div class="field">
      	<%= f.label :comment %> <br>
      	<%= f.text_area :comment, class: '_textarea _2 form-control', placeholder: "Comment your report", rows: "3" %>
      </div>
    </div>
    <div class="col-12">
    	<br>
      <div class="field text-right">
      	<%= f.submit 'submit', class: "btn _btn _1 f-right" %>
      </div>
    </div>
  </div>
<% end %>