<% content_for :title, "Mockering: Resend Confirmation" %>
<div class="d-grid _session"> 
  <div class="_back">
    <div class="_in">
      <i class="bi bi-arrow-left _1"></i>
      <input class="_ocult _2" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancel" />
    </div>
  </div>
  <div class="_cont _session relative">
    <div class="d-table fullsize">
      <div class="d-tablecell v-middle">
        <div class="container">
          <section class="_1 _session">
            <!--<div class="col-12">
              <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, class: "alert alert-info" %>
              <% end %>
            </div>-->
            <div class="col-12 text-center">
              <h2 class="_fw600">Resend confirmation instructions</h2>
            </div>
            <div class="col-12">
              <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
                <%= f.error_notification %>
                <%= f.full_error :confirmation_token %>

                <div class="form-inputs">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                              input_html: { autocomplete: "email" } %>
                </div>
                <br>
                <div class="form-actions">
                  <%= f.button :submit, "Resend confirmation instructions", class: "btn _btn _login" %>
                </div>
              <% end %>
              <br>
              <%= render "devise/shared/links" %>
              <div class="col-12 text-center">
                <br>
                <%= link_to 'Go to Mockering', root_path, class: "_link _1" %>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
  <div class="_subfooter">
    <%= render "shared/minifooter" %>
  </div>
  <%= render "shared/navfooter" %>
</div>
  

<style type="text/css">
  header._header._1,
  nav._navbar{
    display: none !important;
  }
</style>