<div class="d-grid"> 
  <div class="_cont _session relative">
    <div class="d-table fullscreen">
      <div class="d-tablecell v-middle">
        <div class="container">
          <section class="row _session">
            <div class="col-12 text-center">
              <%= link_to root_path, data: { no_turbolink: true } do %>
                <%= image_tag 'https://mockering.s3-sa-east-1.amazonaws.com/assets/mockering-dark.svg', class: "_logo _1", alt: 'Mockering'%>
              <% end %>
              <p class="_text _1 _ttcommons">By human beings for everyone.</p>
            </div>
            <div class="col-12">
              <%= link_to mocker_facebook_omniauth_authorize_path, class: "_btn _session _facebook" do %>
                <span><i class="fab fa-facebook-f"></i></span> <span>Continue with Facebook</span>
              <% end %>
              <%= link_to mocker_google_oauth2_omniauth_authorize_path, class: "_btn _session _google" do %>
              <span><i class="fab fa-google"></i></span> <span>Continue with Google</span>
              <% end %>
            </div>
            <div class="col-12">
              <p class="or"><span>Or</span></p>
            </div>
            <div class="col-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                

                <div class="row">
                  <div class="col-12">
                    <div class="form-group" style="position: relative;">
                      <span class="username-icon-styles position-absolute" style="right: 10px; top:10px;">
                        <span id="valid-username" class="fa fa-check-circle"></span>
                        <span id="invalid-username" class="fa fa-times-circle"></span>
                      </span>
                      <%= f.text_field :slug, placeholder: "Username", class: "form-control", id: "mocker_username"  %>
                    </div>
                    <%= f.email_field :slug,
                              required: true,
                              autofocus: true,
                              class: "_input _1 form-control m-bottom1", placeholder: "Email" %>
                  </div>
                  <div class="col-12">
                    <%= f.email_field :email,
                              required: true,
                              autofocus: true,
                              class: "_input _1 form-control m-bottom1", placeholder: "Email" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.text_field :first_name,
                              required: true,
                              class: "_input _1 form-control m-bottom1", placeholder: "First name" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.text_field :last_name, 
                              required: true,
                              class: "_input _1 form-control m-bottom1", placeholder: "Last name" %>
                  </div>
                  <div class="col-12">
                    <%= f.password_field :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password" },
                              class: "_input _1 form-control m-bottom1", placeholder: "Create a password" %>
                  </div>
                  <div class="col-12">
                    <%= f.password_field :password_confirmation,
                              required: true,
                              input_html: { autocomplete: "new-password" },
                              class: "_input _1 form-control m-bottom1", placeholder: "Confirm password" %>
                  </div>
                </div>
                <br/>
                <div class="form-actions">
                  <%= f.submit "Sign up", class: "btn _btn _login" %>
                </div>
              <% end %>
              <br/>
              <%= render "devise/shared/links" %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
  <%= render "shared/minifooter" %>
</div>


<style type="text/css">
  body{
    background:white;
  }
  #_navbar1{
    display: none;
    visibility: hidden;
  }
</style>