<% content_for :title, "Mockering: Login" %>
<div class="d-grid _session"> 
  <div class="_back">
    <div class="_in">
      <i class="bi bi-arrow-left _1"></i>
      <input class="_2" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancel" />
    </div>
  </div>
  <div class="_cont _session relative">
    <div class="d-table fullsize">
      <div class="d-tablecell v-middle">
        <div class="container">
          <section class="_session _1">
            <div class="col-12 text-center">
              <%= link_to root_path, class: "_logo", data: { no_turbolink: true } do %>
                <%= image_tag '//d8mn60sm70fqt.cloudfront.net/assets/brand/v2/mockering_black.svg', class: "_logo _1 _sun-mode" %>
                <%= image_tag '//d8mn60sm70fqt.cloudfront.net/assets/brand/v2/mockering_dark_mode.svg', class: "_logo _1 _moon-mode" %>
              <% end %>
              <p class="_text _1">By human beings for everyone</p>
              <br>
            </div>
            <div class="col-12">
              <%= link_to mocker_facebook_omniauth_authorize_path, class: "_btn _session _facebook" do %>
                <span><i class="fab fa-facebook-f"></i></span> <span>Continue with Facebook</span>
              <% end %>
              <%= link_to mocker_google_oauth2_omniauth_authorize_path, class: "_btn _session _google" do %>
              <span><i class="fab fa-google"></i></span> <span>Continue with Google</span>
              <% end %>
            </div>
            <div class="col-12">
              <p class="or text-center"><span>Or</span></p>
            </div>
            <div class="col-12 text-center">
                <%= devise_error_messages! %>
                <% flash.each do |key, value| %>
                   <div class="flash <%= key %>"><%= value %></div>
                <% end %>
            </div>
            <div class="col-12 _col_inputsaccount p-0">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <%= f.error_notification %>
                <%= f.full_error :confirmation_token %>
                <div class="form-group" style="margin-bottom: 15px;">
                  <section class="col-12 _col_inputsaccount p-b-0">
                    <%= f.label "Username / Email" %>
                    <%= f.text_field :login,
                              required: true,
                              placeholder: "Username or email", label: false,
                              autocomplete: "email", class: "_input _2 form-control" %>
                  </section>
                  <section class="col-12 _col_inputsaccount p-b-0">
                    <%= f.label "Password" %>
                    <%= f.password_field :password,
                                required: true, 
                                placeholder: "Your password", 
                                label: false,
                                autocomplete: "current-password", class: "_input _2 form-control" %>
                  </section>
                  <section class="col-12">
                    <label class="pure-material-checkbox">
                      <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %> 
                      <span class="_ttcommons">Remember me</span>
                    </label>
                  </section>
                </div>
                <div class="form-actions">
                  <div class="col-12">
                    <%= f.submit "Log in", class: "btn _btn _login" %>
                  </div>
                </div>
                <br/>
              <% end %>
              <%= render "devise/shared/links" %>
              
              <div class="col-12 text-center">
                <br>
                <%= link_to 'Go to Mockering', root_path, class: "_link _1" %>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
  <div class="_subfooter">
    <%= render "shared/minifooter" %>
  </div>
  <%= render "shared/navfooter" %>
</div>
<style type="text/css">
  header._header._1,
  nav._navbar{
    display: none !important;
  }
</style>