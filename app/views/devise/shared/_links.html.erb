<%- if controller_name != 'sessions' %>
  <p class="text-center _fw400 m-0">Are you an old friend? <%= link_to "Log in", new_session_path(resource_name), class: "_link _1 _fw500" %></p><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center _fw400 m-0">Are you new? <%= link_to "Sign up", new_registration_path(resource_name), class: "_link _1 _fw500" %></p><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center _fw400 m-0"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "_link _1 _fw500" %></p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="text-center _fw400 m-0"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "_link _1 _fw500" %></p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="text-center _fw400 m-0"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "_link _1 _fw500" %></p><br />
<% end %>


