<% if @mocker.show_mocks_privated == true && @mocker.following?(current_mocker) || current_mocker == @mocker %>
	<div class="_mocks_mocker row m-0">
		<div class="col-12 p-0">
			<div class="_shuffle_container">
				<% if @privated_mocks.count > 0 %>
					<% @privated_mocks.each do |mock| %>
						<%= render 'mocks/mocky', mock: mock %>
					<% end %>
				<% else %>
					<div class="col-12">
						<div class="jumbotron text-center bg_white">
							<h3 class="_fw600">There is no mocks yet.</h3>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<br>
	<br>
	<br>
	<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
		<div class="btn-group mr-2 m-0-auto" role="group" aria-label="First group">
		  <%= will_paginate @privated_mocks, renderer: BootstrapPagination::Rails, param_name: 'privated_mocks_page' %>
		</div>
	</div>
				
<% end %>