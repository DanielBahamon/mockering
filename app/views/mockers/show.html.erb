	$('.readmore').readmore({
			speed: 75,
			collapsedHeight: 70,
			moreLink: '<a href="#" class="link-2">Show more</a>',
	  		lessLink: '<a href="#" class="link-2">Show less</a>'
		}
	);

	$(function(){
	 	$('.pagination a').attr('data-remote', 'true')
	});
</script>