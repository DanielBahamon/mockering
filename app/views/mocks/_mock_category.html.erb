<div class="_card masonryitem_1 span<%= rand(3..5) %>">
	<% if mock.movie.present? %>
		<div class="_time">
			<section class="cont_time_mock">
				<%= mock_time(mock) %> | <i class="bi bi-camera-video-fill"></i>
			</section>
		</div>
	<% end %>
	<div class="cont_img">
		<%= link_to mock, class: "_link_mock" do %><% end %>
			<% if mock.picture.present? %>
		  	<%= image_tag mock.picture.url(:large), class: "card-img-top" %>
	  	<% else %> 
	  		<%= image_tag mock.movie.url(:thumb), class: "card-img-top" %>
	    <% end %>
	</div>
	<div class="_cardbody">
		<div class="d-table fullsize _content_mock">
			<div class="d-table-cell v-bottom">
				<div class="row m-0 ">
					<div class="col-12 p-0 pb-2">
						<%= link_to mock, class: "_link_mocke_title" do %><h4 class="_cardtitle _fs15pt"><%= mock.title %></h4><% end %>
					</div>
					<div class="col _avatar_mock">
						<div class="d-table fullsize">
							<%= link_to mock.mocker, class: "d-table-cell v-middle" do %>
								<%= image_tag avatar_url(mock.mocker), class: "_avatar _1" %>
							<% end %>
						</div>
					</div>
					<div class="col">
						<div class="text-ellipsis">
							<p class="_fs10pt m-0 _fs90per _username">
								<%= link_to mock.mocker do %>
									<%= mock.mocker.slug %> <%= image_tag badge_icon(mock.mocker), class: "_badge_verification _tooltip _2", "data-toggle": "tooltip","data-placement": "bottom", title: tooltip_badge(mock.mocker) if mock.mocker.verification? %>
								<% end %>
							</p>
							<p class="_fs9pt m-0"><%= render 'mocks/impressions', mock: mock %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>