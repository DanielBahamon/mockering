<% @mocks.each do |mock| %>
	<%= link_to mock, class: "card link_card _2 mb-3" do %>
	
		  <div class="row no-gutters">
		    <div class="col-md-4">
		      <%= image_tag mock.picture.url(:medium), class: "card-img _1" %>
		    </div>
		    <div class="col-md-8">
		      <div class="_cardbody _2 p-2 _minheight150px">
		      	<div class="d-table fullscreen">
		      		<div class="d-tablecell v-middle">
		      			<h5 class="_fw600 _cardtitle"><%= mock.title %></h5>
				        <div class="row m-0 fullwidth">
							<div class="col d-flex p-0">
								<div class="text-ellipsis">
									<div class="d-table fullscreen">
										<div class="d-tablecell v-middle ">
											<p class="_fs10pt m-0 _fs90per">@<%= mock.mocker.slug %></p>
										</div>
									</div>
								</div>
							</div>
							<div class="col">
								<div class="d-table fullscreen">
									<div class="d-tablecell v-middle">
										<div class="d-flex" style="width: max-content;float: right;">
											<p class="_fs10pt m-0 d-md-none d-lg-block d-block" style="padding-right: 9px"><%= render 'mocks/impressions', mock: mock %></p>
											<p class="_fs10pt m-0" style="padding-right: 9px"><%= render 'mocks/likesimple', mock: mock %></p>
											<p class="_fs10pt m-0"><%= render 'mocks/dislikesimple', mock: mock %></p>
										</div>
									</div>
								</div>
							</div>
						</div>
		      		</div>
		      	</div>
		      </div>
		    </div>
		  </div>
	<% end %>
<% end %>

<style type="text/css">
	@media(max-width: 575px){
      ._card{
        width:100vw;
        min-width: 200px;
        margin: 0;
      }
	}
</style>