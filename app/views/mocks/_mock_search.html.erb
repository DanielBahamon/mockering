<div class="container_search">
	<div class="row">
		<% @mocks.each do |mock| %>
			<div class="col-12 col-md-6 p-3 m-0-auto">
				<%= link_to mock, class: "_mock_mocker" do %>
					<div class="row m-0">
						<div class="col-4 _col_img text-center">
							<div class="d-table fullscreen">
								<div class="d-table-cell v-middle">
									<%= image_tag mock.picture.url(:large), class: "img_card_mock_mocker" %>
								</div>
							</div>
						</div>
						<div class="col-8 _cont_mock">
							<div class="d-table fullscreen">
								<div class="d-table-cell v-middle">
									<div class="row">
										<h5 class="card-title _title _fw600"><%= mock.title %></h5>
									</div>
									<div class="row">
										<small><%= mock.created_at.strftime("%d %b %Y").downcase %></small>
									</div>
									<div class="row">
										<div class="d-flex" style="width: max-content;float: right;">
											<p class="_fs10pt m-0" style="padding-right: 9px"><%= render 'mocks/impressions', mock: mock %></p>
											<p class="_fs10pt m-0" style="padding-right: 9px"><%= render 'mocks/likesimple', mock: mock %></p>
											<p class="_fs10pt m-0"><%= render 'mocks/dislikesimple', mock: mock %></p>
										</div>
									</div>	
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
			
</div>



<style type="text/css">
	@media(max-width: 575px){
      ._card{
        width:100vw;
        min-width: 200px;
        margin: 0;
      }
	}
	.container_search{
		width:100%;
		padding:0 15px;
		max-width: 1080px;
		margin: 0 auto;
	}
	.card.link_card._2{
		height: 150px;
		margin: 5px !important;
	}
	.card.link_card._2 img{
		height: 148px;
	}
	@media(min-width: 768px){
		.card.link_card._2{
			width:600px;
		}
	}
</style>