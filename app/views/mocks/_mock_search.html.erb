<div class="container_search">
	<div class="row m-0">

		<% @mocks.each do |mock| %>
				<div class="col-12 col-md-6 p-0 m-0-auto">
					<%= link_to mock, class: "_mock_mocker m-md-1" do %>
						<div class="card">
						  <div class="row no-gutters">
						    <div class="col-md-4">
									<div class="cont_img d-block d-md-none">
										<div class="icon_play ">
											<div class="d-table fullscreen">
												<div class="d-table-cell v-middle text-center">
													<i class="fas fa-play"></i>
												</div>		
											</div>
										</div>
										<%= image_tag mock.picture.url(:large), class: "card-img " %>
									</div>
										<%= image_tag mock.picture.url(:large), class: "card-img d-none d-md-block" %>
						    </div>
						    <div class="col-md-8">
						      <div class="card-body">
						        <h4 class="card-title _title _fw900 text-black"><%= mock.title %></h4>
						        <small><% mock.created_at.strftime("%d %b %Y").downcase %></small>
								<div class="row m-0" id="_row_activity">
									<div class="col-4 text-center">
										<p class=" m-0"><%= render 'mocks/impressions', mock: mock %></p>
									</div>
									<div class="col-4 text-center">
										<p class=" m-0"><%= render 'mocks/likesimple', mock: mock %> </p>
									</div>
									<div class="col-4 text-center">
										<p class=" m-0"><%= render 'mocks/dislikesimple', mock: mock %></p>
									</div>
								</div>
						      </div>
						    </div>
						  </div>
						</div>
					<% end %>
				</div>
					
		<% end %>
	</div>
			
</div>



<style type="text/css">
	@media(max-width: 575px){
      ._card{
        width:100vw;
        min-width: 200px;
        margin: 0;
      }
	}
	#_row_activity{
	    font-weight: 300;
	    font-size: 10pt;
	    color: black;
	}
	.card-title._title{
    margin-bottom: 30px;
	}
	.container_search{
		width:100%;
		max-width: 1080px;
		margin: 0 auto;
	}
	.card.link_card._2{
		height: 150px;
		margin: 5px !important;
	}
	.card.link_card._2 img{
		height: 148px;
	}
	@media(min-width: 768px){
		.card.link_card._2{
			width:600px;
		}
	}
	._mock_mocker{
		max-width:100vw;
	}
	._mock_mocker:hover #_row_activity,
	._mock_mocker:hover .card-title._title{
		color:#4c31ee !important; 
	}
</style>