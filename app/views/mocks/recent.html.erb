<div id="_big_row_index bg_ghoswhite">
	<div class="row m-0">
		<div class="col-12 col-md-3 col-xl-2 _sidenav p-0 d-none d-md-block" id="_sidenav">
			<%= render 'shared/navside' %>
		</div>
		<div class="col-12 col-md-9 col-xl-10 p-0 _content">
			<div class="on_content" id="on_content">
				<div class="row m-0">
					<div class="col-12 _board">
						<div class="d-flex overflowx_auto p-2 taglist" id="taglist">
							<% @tags.each do |tag| %>
								<%= link_to tag.name, mocks_path(tag: tag.name), class: "_chip _1" %>
							<% end %>
							<div class="div_arrow _left">
								<a class="arrow_ arrow-left-navigation_1" ><i class="fas fa-chevron-left"></i></a>
							</div>
							<div class="div_arrow _right">
								<a class="arrow_ arrow-right-navigation_1 pull-right"><i class="fas fa-chevron-right"></i></a>
							</div>
						</div>

						<div class="row m-0 d-block d-md-none">
							<div class="col-12 text-center">
								<h4 class="_fw400 _title _2"><i class="fas fa-stopwatch"></i> Recents</h4>
							</div>
						</div>
						<div class="mocks_content">
							<div id="mocks" class="transitions-enabled">
								<% @mocks.each do |mock| %>
									<%= link_to mock, class: "link_card card box _card" do %>
										<%= image_tag mock.picture.url(:medium), class: "card-img-top" %>
										<div class="_cardbody">
											<div class="row">
												<div class="col-12">
													<div class="d-flex overflowx_none"><% mock.tag_list.each do |tag| %><div class="_chip _1"><%= tag %></div><% end %></div>
													<p class="_cardtitle"><%= mock.title %></p>
												</div>
												<div class="row m-0 fullwidth">
													<div class="col d-flex">
														<div class="d-table fullheight" style="margin-right: 5px;">
															<div class="d-tablecell v-middle">
																<%= image_tag avatar_url(mock.mocker), class: "_avatar _2 m-0-auto" %>
															</div>
														</div>
														<div class="text-ellipsis">
															<div class="d-table fullscreen">
																<div class="d-tablecell v-middle ">
																	<p class="_fs10pt m-0 _fs90per">@<%= mock.mocker.slug %></p>
																</div>
															</div>
														</div>
													</div>
													<div class="col">
														<div class="d-table fullscreen">
															<div class="d-tablecell v-middle">
																<div class="d-flex" style="width: max-content;float: right;">
																	<p class="_fs10pt m-0" style="padding-right: 9px"><%= render 'mocks/impressions', mock: mock %></p>
																	<p class="_fs10pt m-0" style="padding-right: 9px"><%= render 'mocks/likesimple', mock: mock %></p>
																	<p class="_fs10pt m-0"><%= render 'mocks/dislikesimple', mock: mock %></p>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									<% end %>
								<% end %>
							</div>
							<%= will_paginate @mocks %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<style type="text/css">
	@media(max-width: 575px){
      ._card{
        width:100vw;
        min-width: 200px;
        margin: 0;
      }
	}
</style>
<script type="text/javascript">
	
	$(document).ready(function(){
	    $(".arrow-left-navigation_1").click(function(){
	        $("#taglist").animate({scrollLeft: "-="+351});
	    });
	    $(".arrow-right-navigation_1").click(function(){
	        $("#taglist").animate({scrollLeft: "+="+351});
	    });        
	});
</script>