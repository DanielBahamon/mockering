<% content_for :title, "Mockering - Free content to enjoy" %>
<% content_for :name, "Tracks" %>
<div class="_navy">
  <div class="_cont _1">
    <div class="_back">
      <%= link_to root_path, class: "_back" do %>
        <i class="bi bi-arrow-left _1"></i>
      <% end %>
    </div>
    <b>Tracks</b>
  </div>
</div>
<div class="_cont _1">
</div>
<div class="_cont _2">
  <% if @mocks.present? %>
    <% @mocks.each do |mock| %>
      <article> 
        <%= render 'mocks/cards/track', mock: mock %>
      </article>
    <% end %>
  <% else %>
  <div class="_nothinghere">
    <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_IwKi9V.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
      <h3>Nothing yet!</h3>
  </div>
  <% end %>
</div>
<div class="_cont _3">
  <%= will_paginate @mocks %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.audio-item').click(function() {
      // Detiene la reproducci√≥n de todos los elementos de audio
      $('.audio-item audio').each(function() {
        this.pause();
        this.currentTime = 0;
      });

      // Encuentra el audio dentro del elemento clicado
      var audio = $(this).find('audio')[0];

      // Comienza a reproducir el audio
      audio.play();
    });
  });

</script>