<a class="_btn_comment _action_review_<%= @mock.id %>">
  <span><%= number_to_human(@mock.reviews.count, units: { thousand: 'k', million: 'm', billion: 'b' }) %></span>
  <i class="bi bi-chat-fill"></i>
</a>

<!-- Modal -->
<div id="myModal_<%= @mock.id %>" class="_modalreview">
  <div class="modal-header">
    <h5 class="modal-title _fw600 text-left">Feedback</h5>
    <button type="button" class="_close_review close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <%= form_for @mock.reviews.new, class: '_form_comment' do |f| %>
      
      <div class="display-grid fullwidth">
        <%= f.text_area :comment, rows: 3, class: "_textarea_comment form-control",required: true %>
      </div>

      <%= f.hidden_field :mock_id, value: @mock.id %>
      <%= f.hidden_field :mocker_id, value: @mock.mocker.id %>

      <div class="text-center">
        <%= f.submit "Add review", class: "btn _btn _1" %>
      </div>
    <% end %>
  </div>
  <div class="_reviews">
    <div class="reviews" id="reviews">
      <%= render 'reviews/list' %>
    </div>
  </div>
</div>