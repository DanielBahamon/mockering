<% if @reviews.count == 0 %>
  <div class="row">
    <div class="col-12 text-center">
      <p class="m-0">There are no reviews yet</p>
    </div>
  </div>
<% else %>
  <% @reviews.order(id: :desc).each do |r| %>
    <div class="row m-0">
      <div class="col-3 text-center">
        <%= image_tag avatar_url(r.mocker), class: "img-circle _avatar_comment" %><br/><br/>
        <strong><%= r.mocker.first_name %></strong>
      </div>
      <div class="col-9">
        <% if current_mocker && current_mocker == r.mocker %>
          <span class="pull-right">
            <%= link_to r, method: :delete, data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-trash fa-lg"></i>
            <% end %>
          </span>
        <% end %>
      </div>
      <div><%= r.created_at.strftime("%v") %></div>
      <div><%= r.comment %></div>
    </div>
  <% end %>
<% end %>
<br>
<style type="text/css">
  ._avatar_comment{
    width: 100%;
    max-width: 36px;
    border-radius: 300px;
  }
</style>