<div class="_navfooter d-block d-md-none">
	<div class="cont_navfooter">
		<ul class="_listnavfooter">
			<div class="row m-0 fullwidth">
				<li class="col-3">
					<%= link_to root_path, class: "_btn _btnavfoot " do %>
						<i class="fas fa-th-large text-center p-0"></i>
						<p class="m-0">Feed</p>
					<% end %>
				</li>
				<li class="col-3">
					<%= link_to latest_path, class: "_btn _btnavfoot " do %>
						<i class="fas fa-stopwatch text-center p-0"></i>
						<p class="m-0">Latest</p>
					<% end %>
				</li>
				<li class="col-3">
					<%= link_to popular_path, class: "_btn _btnavfoot" do %>
						<i class="fas fa-fire text-center p-0"></i>
						<p class="m-0">Popular</p>
					<% end %>
				</li>
				<li class="col-3">
					<%= link_to notifications_path, class: "_btn _btnavfoot", "data-behavior": "notifications-link" do %>
						<span class="_span_unread_count" data-behavior="unread-count"></span>
						<i class="fas fa-bell text-center p-0"></i>
						<p class="m-0">Yours</p>
					<% end %>
				</li>
			</div>
		</ul>
	</div>
</div>

<style type="text/css">
	._navfooter{
		position: fixed;
	    bottom: 0;
	    left: 0;
	    right: 0;
	    top: auto;
	    border-top:1px solid #eaeaea;
	    background: white;
	}
	.cont_navfooter{
		margin:0 auto;
	}
	._listnavfooter{
		margin: 0 auto;
		padding: 0;
    	display: flex;
    	width:100%;
    	list-style: none;
    	-webkit-box-shadow: 0 0 12px -8px #454545;
    	box-shadow: 0 0 12px -8px #454545;
	}
	@media(max-width: 575px){
		._listnavfooter li a{
			padding-left: 20px !important;
			padding-right: 20px !important;
		}
	}	
	._listnavfooter li{
		padding: 0;
	}
	._btn._btnavfoot{
    	width: 100%;
		text-align: center;
	    padding: 7px 12px;
    	color: #ff5858;
    	border-radius: 0;
    	font-size: 10pt;
    	text-overflow: ellipsis;
    	overflow-x: hidden;
    	-webkit-transition: all .2s ease;
    	transition: all .2s ease;
	}
	._btn._btnavfoot:hover,
	._listnavfooter li.active ._btn._btnavfoot{
		background:#ffe3dd;
	}
	._btn._btnavfoot i{
		font-size: 12pt;
	}
</style>