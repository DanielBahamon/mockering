	      <div class="_cont _1 _user">
	        <div class="_in">
	          <%= link_to "Profile", mocker_path(current_mocker), class: "nav-link"%>
	          <%= link_to "Settings", edit_mocker_registration_path, class: "nav-link" %>
	          <div class="dropdown-divider"></div>
	          <%= link_to 'Sign Out', destroy_mocker_session_path, method: :delete, class: "nav-link" %>
	        </div>
	      </div>
	    </div>
	<% end %>
    <% if mocker_signed_in? %>
      <%= link_to new_mock_path, class: "_btn _1" do %>
        <i class="fal fa-plus"></i>
        <span class="_1">Mock it</span>
      <% end %>
    <% else %>
      <%= link_to new_mocker_session_path, class: "_btn _1" do %>
        <i class="fal fa-plus"></i>
        <span class="_1">Login</span>
      <% end %>
