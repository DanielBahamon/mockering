<nav class="_navside">
  <div class="_cont _1">
    <%= link_to root_path, data: { no_turbolink: true }, class: "_logo _2" do %>
      <%= image_tag '//d8mn60sm70fqt.cloudfront.net/assets/brand/v2/icon_1.svg', class: "_logonav _3 _sun-mode", alt: 'Mockering'%>
      <%= image_tag '//d8mn60sm70fqt.cloudfront.net/assets/brand/v2/icon_dark_mode.svg', class: "_logonav _4 _moon-mode", alt: 'Mockering'%>
    <% end %>
    <%= link_to root_path, class: "_item #{'active' if current_page?(root_path)}" do %>
      <i class="fal fa-globe-americas"></i>
      <span class="_1">Feed</span>
    <% end %>
    <%= link_to mockets_path, class: "_item d-none #{'active' if current_page?(mockets_path)}" do %>
      <i class="fal fa-hiking"></i>
      <span class="_1">Explore</span>
    <% end %>
    <%= link_to mockies_path, class: "_item #{'active' if current_page?(mockies_path)}" do %>
      <i class="fal fa-film-alt"></i>
      <span class="_1">Mockies</span>
    <% end %>
    <%= link_to mockets_path, class: "_item #{'active' if current_page?(mockets_path)}" do %>
      <i class="fal fa-images"></i>
      <span class="_1">Mockets</span>
    <% end %>
    <%= link_to tracks_path, class: "_item #{'active' if current_page?(tracks_path)}" do %>
      <i class="fal fa-compact-disc"></i>
      <span class="_1">Tracks</span>
    <% end %>
	<% if mocker_signed_in? %>
		<%= link_to liked_path, class: "_item #{'active' if current_page?(liked_path)}" do %>
			<i class="fal fa-box-heart"></i>
      		<span class="_1">Loved</span>
		<% end %>
		<%= link_to your_mocks_path, class: "_item #{'active' if current_page?(your_mocks_path)}" do %>
			<i class="fal fa-box-full"></i>
      		<span class="_1">Library</span>
		<% end %>
		<%= link_to conversations_path, class: "_item #{'active' if current_page?(conversations_path)}" do %>
			<i class="fal fa-comments-alt"></i>
      		<span class="_1">Messages</span>
		<% end %>
